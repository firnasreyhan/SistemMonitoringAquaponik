<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#405FF2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_45sdp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="Sistem Monitoring Aquaponik"
        android:textColor="@color/white"
        android:textSize="@dimen/_19sdp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_48sdp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_marginRight="@dimen/_11sdp"
            app:cardBackgroundColor="#7A91FF"
            app:cardCornerRadius="@dimen/_16sdp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_minus11sdp"
            app:cardCornerRadius="@dimen/_11sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_24sdp"
                android:paddingBottom="@dimen/_24sdp"
                android:paddingLeft="@dimen/_11sdp"
                android:paddingRight="@dimen/_11sdp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardViewModelOtomatis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F4F6FF"
                    app:cardCornerRadius="@dimen/_11sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_19sdp"
                        android:paddingBottom="@dimen/_19sdp"
                        android:paddingLeft="@dimen/_11sdp"
                        android:paddingRight="@dimen/_11sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewModelOtomatis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:text="Mode Otomatis"
                            android:textColor="#77838F"
                            android:textSize="@dimen/_19sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|right">

                            <com.github.angads25.toggle.widget.LabeledSwitch
                                android:id="@+id/labelSwitchModelOtomatis"
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_18sdp"
                                app:textOn=""
                                app:textOff=""
                                app:on="false"
                                app:colorBorder="#0629CB"
                                app:colorOn="#0629CB"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/materialCardViewPompaAir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F4F6FF"
                        app:cardCornerRadius="@dimen/_11sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_11sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewPompaAir"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_pompa_air_unselected"/>

                                <TextView
                                    android:id="@+id/textViewStatusPompaAir"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="center|right"
                                    android:text="Off"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewPompaAir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Pompa Air"
                                android:textColor="#77838F"
                                android:textSize="@dimen/_13sdp" />

                            <com.github.angads25.toggle.widget.LabeledSwitch
                                android:id="@+id/labelSwitchPompaAir"
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                app:textOn=""
                                app:textOff=""
                                app:on="false"
                                app:colorBorder="#0629CB"
                                app:colorOn="#0629CB"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/materialCardViewModelPompaTanaman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F4F6FF"
                        app:cardCornerRadius="@dimen/_11sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_11sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewPompaTanaman"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_pompa_tanaman_unselected"/>

                                <TextView
                                    android:id="@+id/textViewStatusPompaTanaman"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="center|right"
                                    android:text="Off"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewPompaTanaman"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Pompa Tanaman"
                                android:textColor="#77838F"
                                android:textSize="@dimen/_13sdp" />

                            <com.github.angads25.toggle.widget.LabeledSwitch
                                android:id="@+id/labelSwitchPompaTanaman"
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                app:textOn=""
                                app:textOff=""
                                app:on="false"
                                app:colorBorder="#0629CB"
                                app:colorOn="#0629CB"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F4F6FF"
                        app:cardCornerRadius="@dimen/_11sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_11sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_ph"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="Ph"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/textViewPh"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F4F6FF"
                        app:cardCornerRadius="@dimen/_11sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_11sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_tds"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="TDS"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/textViewTDS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="right"
                                    android:text="0 ppm"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F4F6FF"
                        app:cardCornerRadius="@dimen/_11sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_11sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_ntu"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="NTU"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/textViewNTU"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F4F6FF"
                        app:cardCornerRadius="@dimen/_11sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_11sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_cahaya"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="Cahaya"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/textViewCahaya"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="right"
                                    android:text="0%"
                                    android:textColor="#77838F"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</LinearLayout>